<% if object.errors.any? %>
	<div class="row">
		<div class="col-md-12">
			<div class="alert alert-danger">
				<strong>There were problems while saving the <%= model_name %>:</strong>
				<ul>
					<% object.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
<% end %>
